%h4= flash[:error] if flash[:error]

= form_for @user do |f|
	= f.label						"Name: "
	= f.text_field			:name, :autofocus => true
	%br
	= f.label						"Username: " #:
	= f.text_field			:username
	%br
	= f.label						"Email: "
	= f.email_field			:email
	%br
	= f.label						"Location: "
	= f.text_field			:location
	%br
	= f.label						"Password: "
	=	f.password_field	:password
	%br
	= f.label						"Confirm your password: "
	= f.password_field	:password_confirmation
	%br
	= f.submit					"Make me a star!"
